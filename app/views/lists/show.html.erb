<h1>List #id Show</h1>
<%= simple_form_for [@list] do |f| %>
  <%= f.input :name %>
  <%= f.submit "Make a new list", class: "btn btn-primary" %>
<% end %>

<div>
<br>
  <%= link_to "Back to lists", lists_path %>

<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.content %>
  <%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  <% end %>
</li>
</ul>
<br>
  <div>
   <%= link_to "new bookmark", new_list_bookmark_path(@list)%>
</div>
<br>
  <%= button_to "Destroy this list", @list, method: :delete %>
</div>
